@model MiniAvatarCollectionLibrary.Collectable

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Collectable</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="" class="form-label mt-4">Select Nation</label>
                <select asp-for="Nation" class="form-select">
                    <optgroup label="Nations">
                        <option value="none" selected disabled hidden>  Select an Option</option>
                        <option>Fire Nation</option>
                        <option>Water Tribe</option>
                        <option>Air Nomads</option>
                        <option>Earth Kingdom</option>
                    </optgroup>
                 </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
